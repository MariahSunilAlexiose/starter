{
  "name": "starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext ts --ext tsx --ext js --config eslint.config.mjs",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "check-types": "tsc --pretty --noEmit",
    "check-prettier": "prettier --config .prettierrc.json --check --ignore-path .prettierignore .",
    "prettier": "prettier --config .prettierrc.json --write --ignore-path .prettierignore .",
    "format": "eslint . --ext ts --ext tsx --ext js --config eslint.config.mjs && prettier --config .prettierrc.json --write --ignore-path .prettierignore . && tsc --pretty --noEmit"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,md}": [
      "prettier --config .prettierrc.json --write"
    ],
    "*.{js,ts,tsx}": [
      "eslint --config eslint.config.mjs --fix"
    ]
  },
  "dependencies": {
    "next": "15.5.0",
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.6.2",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "^24.3.0",
    "@types/react": "19.1.11",
    "@types/react-dom": "19.1.7",
    "eslint": "^9.34.0",
    "eslint-config-next": "^15.5.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.12",
    "typescript": "^5"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "resolutions": {
    "@types/react": "19.1.11",
    "@types/react-dom": "19.1.7"
  }
}
